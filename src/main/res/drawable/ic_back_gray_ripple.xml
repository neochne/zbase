<!--
    点击后的颜色
    如果设置了 <item android:id="@android:id/mask" .../>，当点击后，则该颜色会作用于此 drawable 设置的颜色或图片
    反之，会作用于默认图片
-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#ABA9A9">
    <!--  遮层，遮盖在默认图片上的图片或颜色  -->
    <!--<item android:id="@android:id/mask" android:drawable="@android:color/white"/>-->
    <!--  默认显示的图片  -->
    <item android:drawable="@drawable/ic_back_gray" />
</ripple>